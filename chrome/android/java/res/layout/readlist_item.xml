<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/readlist_item_logo"
        android:layout_width="0dp"
        android:layout_weight="0.15"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:contentDescription="@string/favicon"
        android:src="@drawable/btn_close"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.85"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/readlist_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:textSize="18sp"
            android:text="@string/readlist_title"/>

        <TextView
            android:id="@+id/readlist_item_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="15sp"
            android:text="@string/readlist_url"/>

    </LinearLayout>




</LinearLayout>
